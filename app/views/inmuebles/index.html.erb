<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="well">
        <%= link_to 'Nuevo inmueble', new_inmueble_path, :class => "btn btn-primary" %>
        <h1>Listado de inmuebles(<%= @inmuebles.count %>)</h1>
		<div class="bs-example table-responsive">
			<table class="table table-striped table-hover ">
				<thead>
		          <tr>
		          	<th>Ciudad</th>
		          	<th>Dirección</th>
		          	<th>Zona</th>
		            <th>Código</th>
		            <th>Clase</th>
		            <th>Negocio</th>
		            <th>Agente</th>
		            <th>Valor</th>
		            <th>Fecha captado</th>
		            <th>Interesado</th>
		            <th>Valor mt2</th>
		            <th>Valor total</th>
		            <th colspan="2">Opciones</th>
		          </tr>
		      	</thead>
					
		        <% @inmuebles.each do |inmueble| %>
		        <tbody>	
		        	<tr>
		          		<td><%= inmueble.ciudad_id %></td>
		          		<td><%= inmueble.direccion %></td>
		          		<td><%= inmueble.zona %></td>
			          	<td><%= inmueble.codigo_inmueble %></td>
			          	<td><%= inmueble.clase_inmueble %></td>
			          	<td><%= inmueble.tipo_negocio %></td>
			          	<td><%= inmueble.nombre_agente %></td>
			          	<td><%= inmueble.valor_inmueble %></td>
			          	<td><%= inmueble.fecha_captado %></td>
			          	<td><%= inmueble.nombre_interesado %></td>
			          	<td><%= inmueble.valor_mt2 %></td>
			          	<td><%= inmueble.valor_total %></td>
			          	<td>
				          	<div class="bs-example style="margin-bottom: 15px;">
					          <div class="btn-group btn-group-justified">
					            <%= link_to 'Ver', inmueble, :class => "btn btn-default" %>
					            <%= link_to 'Editar', edit_inmueble_path(inmueble), :class => "btn btn-default" %>
					            <%= link_to 'Eliminar', inmueble, method: :delete, data: { confirm: '¿Está seguro?' }, :class => "btn btn-default" %>
					          </div>
					        </div>
				        </td>
		            </tr>
		            </tbody>
		        <% end %>
		        
		 	</table>
		</div>
      </div>
    </div>
  </div>
</div>