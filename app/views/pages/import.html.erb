<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="well">
        <h2><%= "Los siguientes registros resaltados tienen errores (#{@result.count})" %></h2>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Ciudad</th>
              <th>Clase</th>
              <th>Errores</th>
            </tr>
          </thead>
          <% @result.each do |result| %>
            <tbody>
              <% if result.errors.any? %>
                <tr class="warning">
              <% else %>
                <tr class="active">
              <% end %>
                <td><%= result.nombre_inmueble %></td>
                <td><%= result.ciudad_id %></td>
                <td><%= result.clase_inmueble %></td>
                <td>
                  <% result.errors.full_messages.each do |error_msg| %>
                    <li>
                      <%= error_msg %>
                    </li>
                  <% end %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>