<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="well">
        <%= link_to 'Nuevo interesado', new_interesado_path, :class => "btn btn-primary" %>
        <h1>Listado de interesados (<%= @interesados.count %>)</h1>
        <div class="bs-example table-responsive">
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Observaciones</th>
                <th colspan="2">Opciones</th>
              </tr>
            </thead>
            <% @interesados.each do |interesado| %>
              <tbody>
                <tr>
                  <td><%= interesado.nombre %></td>
                  <td><%= interesado.telefono %></td>
                  <td><%= interesado.celular %></td>
                  <td><%= interesado.email %></td>
                  <td><%= %></td>
                  <td>
                    <div class="bs-example" style="margin-bottom: 15px;">
                      <div class="btn-group">
                        <%= link_to 'Editar', edit_interesado_path(interesado), :class => "btn btn-default" %>
                        <%= link_to 'Eliminar', interesado, method: :delete, data: { confirm: '¿Está seguro?' }, :class => "btn btn-default" %>
                      </div>
                    </div>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
