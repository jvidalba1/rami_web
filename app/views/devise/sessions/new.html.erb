
<div class="bs-docs-section" style="margin-left: 34%;">
	<div class="row">
		<div class="col-lg-6">
			<div class="well">
				<h2>Inicio de sesión</h2>

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				  <div><%= f.label :email %><br />
				  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>
				
				  <div><%= f.label :password, "Contraseña" %><br />
				  <%= f.password_field :password, :id => "inputPassword", :class => "form-control"%></div>
				
				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordar" %></div>
				  <% end -%>
				
				  <div><%= f.submit "Aceptar" %></div>
				<% end %>
				
				<%= render "devise/shared/links" %>		
			</div>	
		</div>
		
	</div>	
</div>
